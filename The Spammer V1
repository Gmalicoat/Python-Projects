import tkinter as tk
import time
import pyautogui

class App(tk.Tk):
    def __init__(self):
        super().__init__()
        self.title("Input Storage App")
        self.geometry("500x300")

        # Create a StringVar to store user input
        self.iterations = tk.StringVar()
        self.message = tk.StringVar()

        # Create Entry widget for user input
        self.input_entry = tk.Entry(self, textvariable=self.iterations)
        self.input_entry.pack()

        # Create Button widget to trigger printing
        self.print_button = tk.Button(self, text="Print Input", command=self.execute)
        self.print_button.pack()

    def execute(self):
        repeat = int(self.iterations.get())
        time.sleep(10)
        for number in range(repeat):
            pyautogui.typewrite("Message here...")
            time.sleep(0.2)
            pyautogui.press("enter")



if __name__ == "__main__":
    app = App()
    app.mainloop()
